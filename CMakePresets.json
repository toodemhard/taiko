{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-Wno-error",
        "CMAKE_C_COMPILER_WORKS": "YES",
        "CMAKE_CXX_COMPILER_WORKS": "YES",
        "SDL3_DIR": "${sourceDir}/lib/sdl3/build"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug",
      "displayName": "debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-g -DDEV",
        "CMAKE_C_FLAGS": "-g -DDEV"
      }
    },
    {
      "name": "release",
      "displayName": "release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS": "-DDEV -D__FUNCTION__=__PRETTY_FUNCTION__",
        "CMAKE_C_FLAGS": "-DDEV",
        "TRACY_ENABLE": "ON",
        "TRACY_ON_DEMAND": "ON"
      }
    },
    {
      "name": "distribution",
      "displayName": "distribution",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O2",
        "CMAKE_C_FLAGS": "-O2",
        "CMAKE_INSTALL_PREFIX": "{$sourceDIr}/dist",
        "COPY_TO_DISTRIBUTION": "ON"
      }
    }
  ]
}
